# 服务监听地址
SERVER_ADDR=:1323

# API 保护（生产建议必填，Header: X-API-Key）
NPA_ADMIN_API_KEY=

# 是否允许 HTTP 接口回退使用服务端配置凭据（生产建议 false）
NPA_ALLOW_CONFIG_AUTH_FALLBACK=false

# 认证方式1：直接使用已有用户 token（二选一，推荐服务端配置）
# NPA_TOKEN=your-user-bearer-token

# 认证方式2：自动换 token（二选一）
# 说明：如需自动刷新 token，必须提供以下 3 项
NPA_CLIENT_ID=your-client-id
NPA_CLIENT_SECRET=your-client-secret
NPA_SUB_ID=530
NPA_SUB_TYPE=user

# Npan 接口地址
NPA_BASE_URL=https://npan.novastar.tech:6001/openapi
NPA_OAUTH_HOST=https://npan.novastar.tech:6001/openoauth

# Meilisearch 配置
MEILI_HOST=http://127.0.0.1:7700
MEILI_API_KEY=
MEILI_INDEX=npan_items

# 同步任务基础配置
NPA_INCLUDE_DEPARTMENTS=true
# NPA_DEPARTMENT_IDS=429
# NPA_ROOT_FOLDER_IDS=0
NPA_PROGRESS_FILE=./data/progress/full-sync-progress.json
NPA_CHECKPOINT_FILE=./data/checkpoints/full-crawl.json
NPA_SYNC_STATE_FILE=./data/progress/incremental-sync-state.json

# 并发与重试
NPA_SYNC_MAX_CONCURRENT=2
NPA_SYNC_MIN_TIME_MS=200
NPA_SYNC_ROOT_WORKERS=2
NPA_SYNC_PROGRESS_EVERY=1
NPA_MAX_RETRIES=3
NPA_BASE_DELAY_MS=500
NPA_MAX_DELAY_MS=5000
NPA_JITTER_MS=200
